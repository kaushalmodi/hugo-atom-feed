                    {{ else -}}
                        {{- with .Params.email }} <!-- default: author email from profile page disabled for privacy reasons -->
                            <email>{{ . | plainify }}</email>
                        {{ end -}}
                    {{ end -}}
                </author>
            {{- end -}}
        {{- end -}}
