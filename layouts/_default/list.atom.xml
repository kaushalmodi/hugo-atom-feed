                    {{- else if and $author (isset $author.Params "email") }} <!-- use author email from profile page if found -->
                        <email>{{ $author.Params.email | safeHTML }}</email>
                    {{- end -}}
                </author>
            {{ end }}
        {{ end }}
    {{ else if $authors }} <!-- simple author name -->
